<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.nomanikram.epilepsyseizuredetection.ContactFragment">



    <!-- TODO: Update blank fragment layout -->
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_contact"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_margin="0dp"
        android:layout_marginStart="0dp"
        android:background="@color/colorPrimary"
        android:padding="0dp"
        app:title="Contact"
        app:titleTextColor="@color/colorRaisedButtonText">


        <android.support.v7.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:textColor="@color/colorRaisedButtonText"
            android:layout_marginStart="0dp"
            android:gravity="center_horizontal"
            android:padding="0dp"
            android:text="Contact"
            android:textSize="24dp"
            android:visibility="gone"

            />

    </android.support.v7.widget.Toolbar>


<android.support.v7.widget.RecyclerView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

  android:layout_weight="90"
    android:id="@+id/recycler_contact"
    >

</android.support.v7.widget.RecyclerView>


<android.support.v7.widget.AppCompatButton
    android:layout_width="match_parent"
    android:layout_height="35dp"

    android:layout_marginTop="16dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"

    android:layout_weight="5"

    android:id="@+id/btn_add_manually"

    android:layout_centerHorizontal="true"
    android:text="Add Manually"
    style="@style/FlatButton"/>

    <android.support.v7.widget.AppCompatButton

        android:layout_width="match_parent"
        android:layout_height="35dp"

        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"

        android:layout_weight="5"
        android:id="@+id/btn_add_from_contacts"
        android:layout_centerHorizontal="true"

        android:text="Add from Contacts"
        style="@style/FlatButton"
        />
</LinearLayout>
